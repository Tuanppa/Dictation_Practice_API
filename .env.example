# Database
DATABASE_URL=postgresql://localhost/dictation_practice_db

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
# REDIS_URL=redis://localhost:6379  # Railway will set this automatically

# JWT
SECRET_KEY=change-this-to-a-random-string-at-least-32-characters-long
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# OAuth - Google (optional)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# OAuth - Apple (optional)
APPLE_CLIENT_ID=your-apple-client-id
APPLE_TEAM_ID=your-apple-team-id
APPLE_KEY_ID=your-apple-key-id
APPLE_PRIVATE_KEY_PATH=path/to/apple/key.p8

# Environment
ENVIRONMENT=development

# CORS (comma-separated origins)
ALLOWED_ORIGINS=*